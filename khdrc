# Vadim's khdrc

# Enable kwn compatability
khd kwm on

# Enable the prefix mode
khd mode prefix prefix on
khd mode prefix timeout 0.75
khd mode prefix restore default
khd mode prefix color 0xFF458588

# Activate prefix mode
0x50                 :    khd -e "mode activate prefix"

# Modify Container
prefix - s               :    kwmc window -c split-mode toggle
prefix - 0x32            :    kwmc window -c type toggle

# Set Space Tiling Mode To BSP
prefix + ctrl - a        :    kwmc space -t bsp
# Set Space Tiling Mode To Monocle
prefix + ctrl - s        :    kwmc space -t monocle
# Set Space Tiling Mode To Floating
prefix + ctrl - d        :    kwmc space -t float

# Give Focus To Window
prefix - h               :    kwmc window -f west
prefix - j               :    kwmc window -f south
prefix - k               :    kwmc window -f north
prefix - l               :    kwmc window -f east
# prefix - n               :    kwmc window -fm next
# prefix + shift - n       :    kwmc window -fm prev

# Detach Focused Window And Reinsert In Direction
prefix + shift - k         :    kwmc window -m north
prefix + shift - l         :    kwmc window -m east
prefix + shift - j         :    kwmc window -m south
prefix + shift - h         :    kwmc window -m west

# Expand window size
prefix + ctrl - h                : kwmc window -c expand 0.05 west
prefix + ctrl + shift  - h       : kwmc window -c reduce 0.05 west
prefix + ctrl - j                : kwmc window -c expand 0.05 south
prefix + ctrl + shift  - j       : kwmc window -c reduce 0.05 south
prefix + ctrl - k                : kwmc window -c expand 0.05 north
prefix + ctrl + shift  - k       : kwmc window -c reduce 0.05 north
prefix + ctrl - l                : kwmc window -c expand 0.05 east
prefix + ctrl + shift  - l       : kwmc window -c reduce 0.05 east

# Give Focus To Screen
prefix - 1            :    kwmc display -f 0
prefix - 2            :    kwmc display -f 1
prefix - 3            :    kwmc display -f 2

# Move Focused Window To Screen
prefix + shift - 1           :    kwmc window -m display 0
prefix + shift - 2           :    kwmc window -m display 1
prefix + shift - 3           :    kwmc window -m display 2

prefix - f               :    kwmc window -z fullscreen
prefix - d               :    kwmc window -z parent
prefix - w               :    kwmc window -t focused
